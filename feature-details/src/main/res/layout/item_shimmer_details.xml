<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="150dp"
        android:id="@+id/text_shimmer_one"
        android:layout_height="@dimen/shimmer_height"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        style="@style/Widget.StarWarsSearch.ShimmerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_shimmer_two"
        android:layout_width="200dp"
        android:layout_height="@dimen/shimmer_height"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        style="@style/Widget.StarWarsSearch.ShimmerText"
        app:layout_constraintStart_toStartOf="@+id/text_shimmer_one"
        app:layout_constraintTop_toBottomOf="@id/text_shimmer_one" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_shimmer_three"
        android:layout_width="250dp"
        android:layout_height="@dimen/shimmer_height"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        style="@style/Widget.StarWarsSearch.ShimmerText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_shimmer_two"
        app:layout_constraintTop_toBottomOf="@id/text_shimmer_two" />


</androidx.constraintlayout.widget.ConstraintLayout>